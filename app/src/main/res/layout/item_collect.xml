<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e0e0"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivGoodsThumb"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_weight="0.42"
        android:scaleType="fitXY"
        android:src="@drawable/nopic" />


    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivGoodsThumb"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="商品名称"
        android:textColor="#0b660d"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGoodsName"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:text="$339.33"
        android:textColor="#fd0717"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ivCollectDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/delete" />
</RelativeLayout>
